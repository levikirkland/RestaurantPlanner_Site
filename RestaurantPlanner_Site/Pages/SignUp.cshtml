@page 
@using RestaurantPlanner_Site.Pages
@using RestaurantPlanner_Site.Models
@model SignUpModel
@{
    ViewData["Title"] = "SignUp";

}
@section Stylesheets
{
    <link rel="stylesheet" href="~/css/landingstyle.css" />
}

<div class="text-center mt-2">
<h2 style="font-size: 60px;line-height: 60px;margin-bottom: 20px;font-weight: 900;">Get <span class="highlight">Started</span></h2>
<p class="lead">
	This is Step 1 in the sign up process. Fill in All the fields below. When ready, click Create.
</p>
</div>
<div class="container-lg pl-0">
    <div class="row">
       <div class="col-lg-8">
            <div class="card">
        <div class="card-body">
            <div class="m-sm-4">
                <div class="col">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="form-group col-6">
                                <label asp-for="AccountInfo.CompanyName" class="control-label"></label>
                                <input asp-for="AccountInfo.CompanyName" class="form-control" />
                                <span asp-validation-for="AccountInfo.CompanyName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-6">
                                <label asp-for="AccountInfo.FirstName" class="control-label"></label>
                                <input asp-for="AccountInfo.FirstName" class="form-control" />
                                <span asp-validation-for="AccountInfo.FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-6">
                                <label asp-for="AccountInfo.LastName" class="control-label"></label>
                                <input asp-for="AccountInfo.LastName" class="form-control" />
                                <span asp-validation-for="AccountInfo.LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-6">
                                <label asp-for="AccountInfo.EmailAddress" class="control-label"></label>
                                <input asp-for="AccountInfo.EmailAddress" class="form-control" />
                                <span asp-validation-for="AccountInfo.EmailAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group col-6">
                                <label asp-for="AccountInfo.Phone" class="control-label"></label>
                                <input asp-for="AccountInfo.Phone" class="form-control" />
                                <span asp-validation-for="AccountInfo.Phone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="AccountInfo.Address1" class="control-label"></label>
                            <input asp-for="AccountInfo.Address1" class="form-control" />
                            <span asp-validation-for="AccountInfo.Address1" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AccountInfo.Address2" class="control-label"></label>
                            <input asp-for="AccountInfo.Address2" class="form-control" />
                            <span asp-validation-for="AccountInfo.Address2" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AccountInfo.City" class="control-label"></label>
                            <input asp-for="AccountInfo.City" class="form-control" />
                            <span asp-validation-for="AccountInfo.City" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="form-group col-4">
                                <label asp-for="AccountInfo.State" class="control-label"></label>
                                <select asp-for="AccountInfo.State" class="form-control"
                                    asp-items="Html.GetEnumSelectList<States>()">
                                    <option>---Select State---</option>
                                </select>
                                <span asp-validation-for="AccountInfo.State" class="text-danger"></span>
                            </div>
                            <div class="form-group col-3">
                                <label asp-for="AccountInfo.Zipcode" class="control-label"></label>
                                <input asp-for="AccountInfo.Zipcode" class="form-control" />
                                <span asp-validation-for="AccountInfo.Zipcode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row col-12">
                            <div class="col-3 border border-primary">
                                <h5 class="text-primary">Basic</h5>
                                <div class="pl-3">
                                    <input asp-for="AccountInfo.AccountType" value="@AccountTypes.Basic"
                                        class="form-check-input" type="radio" id="flexRadioDefault" />
                                    <label class="form-check-label" for="flexRadioDefault1">
                                        <strong>479 /yr</strong>
                                    </label>
                                </div>
                            </div>
                            <div class="col-3 border border-success">
                                <h5 class="text-success">Advanced</h5>
                                <div class="pl-3">
                                    <input asp-for="AccountInfo.AccountType" value="@AccountTypes.Advanced"
                                        class="form-check-input" type="radio" id="flexRadioDefault" />
                                    <label class="form-check-label" for="flexRadioDefault2">
                                        <strong>649 /yr</strong>
                                    </label>
                                </div>
                            </div>
                            <div class="col-3 border border-danger form-check">
                                <h5 class="text-danger">Pro</h5>   
                                <div class="pl-3">
                                    <input asp-for="AccountInfo.AccountType" value="@AccountTypes.Pro"
                                        class="form-check-input" type="radio" id="flexRadioDefault" />
                                    <label class="form-check-label " for="flexRadioDefault3">
                                        <strong>1299 /yr</strong>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group pt-4">
                            <input type="submit" value="Create Account" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
       </div>
       <div class="col-lg-4">
           <div class="card mb-4">
        <div class="card-header">Password Authentication</div>
        <div class="card-body">
            <p>Enter your password below, and confirm your password, to create your account.</p>
            <form>
                <input type="password" class=" border-bottom-1" id="password" placeholder="your password" onkeyup='check()'>

      
                 <input type="password" id="checkPassword" class="password" placeholder="confirm your password" onkeyup='check()'>
         
                 <p id="alertPassword"></p>
            </form>
        </div>
    </div>
    <!-- Delete account card-->
    <div class="card mb-4">
        <div class="card-header">Delete Account</div>
        <div class="card-body">
            <p>Deleting your account is a permanent action and cannot be undone. If you are sure you want to delete your
                account, select the button below.</p>
            <button class="btn btn-danger-soft text-danger" type="button">I understand, delete my account</button>
        </div>
    </div>
       </div>
        
    </div>
  
</div>


<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
         var check = function() {
              if (document.getElementById('password').value ==
                  document.getElementById('checkPassword').value) {
                  document.getElementById('alertPassword').style.color = '#8CC63E';
                  document.getElementById('alertPassword').innerHTML = '<span><i class="fas fa-check-circle"></i>Match !</span>';
              } else {
      		        document.getElementById('alertPassword').style.color = '#EE2B39';
                  document.getElementById('alertPassword').innerHTML = '<span><i class="fas fa-exclamation-triangle"></i>not matching</span>';
              }
          }
    </script>

}
